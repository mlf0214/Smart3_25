<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_margin="5dp"
    android:layout_width="match_parent"
    android:layout_height="50dp">
<LinearLayout

    android:orientation="vertical"
    android:layout_width="0dp"
    android:gravity="center"
    android:layout_height="match_parent"
    android:layout_weight="1">
    <ImageView
        android:layout_width="35dp"
        android:background="@drawable/select_tab1"

        android:layout_height="35dp"
        android:id="@+id/iv_tab1"/>
    <TextView
        android:textColor="@color/select_tab"
        android:layout_width="35dp"
        android:textSize="12dp"
        android:gravity="center"
        android:text="主页"
        android:id="@+id/tv_tab1"
        android:layout_height="15dp"/>
</LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:gravity="center"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <ImageView
            android:layout_width="35dp"
            android:background="@drawable/select_tab2"

            android:layout_height="35dp"
            android:id="@+id/iv_tab2"/>
        <TextView
            android:textColor="@color/select_tab"
            android:layout_width="60dp"
            android:textSize="12dp"
            android:gravity="center"
            android:id="@+id/tv_tab2"

            android:text="全部服务"
            android:layout_height="15dp"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:gravity="center"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <ImageView
            android:layout_width="35dp"
            android:background="@drawable/select_tab3"

            android:layout_height="35dp"
            android:id="@+id/iv_tab3"/>
        <TextView
            android:textColor="@color/select_tab"
            android:layout_width="60dp"
            android:textSize="12dp"
            android:gravity="center"
            android:text="智慧社区"
            android:id="@+id/tv_tab3"

            android:layout_height="15dp"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:gravity="center"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <ImageView
            android:layout_width="35dp"
            android:background="@drawable/select_tab4"

            android:layout_height="35dp"
            android:id="@+id/iv_tab4"/>
        <TextView
            android:textColor="@color/select_tab"
            android:layout_width="60dp"
            android:textSize="12dp"
            android:gravity="center"
            android:id="@+id/tv_tab4"

            android:text="数据分析"
            android:layout_height="15dp"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:gravity="center"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <ImageView
            android:layout_width="35dp"
            android:background="@drawable/select_tab5"

            android:layout_height="35dp"
            android:id="@+id/iv_tab5"/>
        <TextView
            android:textColor="@color/select_tab"
            android:layout_width="60dp"
            android:textSize="12dp"
            android:id="@+id/tv_tab5"

            android:gravity="center"
            android:text="个人中心"
            android:layout_height="15dp"/>
    </LinearLayout>
</LinearLayout>